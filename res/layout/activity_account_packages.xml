<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin" >
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/packages1"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_packages_rockero" />

        <CheckBox
            android:id="@+id/packages2"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages1"
            android:text="@string/lbl_package_metalero" />

        <CheckBox
            android:id="@+id/packages3"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages2"
            android:text="@string/lbl_package_casual" />

        <CheckBox
            android:id="@+id/packages4"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages3"
            android:text="@string/lbl_package_uniformado" />

        <CheckBox
            android:id="@+id/packages5"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages4"
            android:text="@string/lbl_package_skater" />

        <CheckBox
            android:id="@+id/packages6"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages5"
            android:text="@string/lbl_package_hiphop" />

        <CheckBox
            android:id="@+id/packages7"
            style="@style/PinkCheckbox"
