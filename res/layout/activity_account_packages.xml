        <CheckBox
            android:id="@+id/packages10"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages9"
            android:text="@string/lbl_package_gotico" />

        <CheckBox
            android:id="@+id/packages11"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages10"
            android:text="@string/lbl_package_motoquero" />

        <CheckBox
            android:id="@+id/packages12"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages11"
            android:text="@string/lbl_package_reggaetonero" />

        <CheckBox
            android:id="@+id/packages13"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages12"
            android:text="@string/lbl_package_zorron" />

        <CheckBox
            android:id="@+id/packages14"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages13"
            android:text="@string/lbl_package_parrillero" />

        <CheckBox
            android:id="@+id/packages15"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages14"
            android:text="@string/lbl_package_lana" />

        <CheckBox
            android:id="@+id/packages16"
            style="@style/PinkCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages15"
            android:text="@string/lbl_package_pokemon" />
        
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packages16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" >

	        <Button
	            android:id="@+id/packagesFormSaveBtn"
	            style="@style/button_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/light_blue_button"
	            android:text="@string/btn_account_save" />
	
	        <Button
	            android:id="@+id/packagesFormBackBtn"
	            style="@style/button_text"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.71"
	            android:background="@drawable/gray_button"
	            android:text="@string/btn_account_back" />
	
	    </LinearLayout>
            
    </RelativeLayout>

