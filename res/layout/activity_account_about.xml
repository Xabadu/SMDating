<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutCrazyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" >

        <ImageButton
            android:id="@+id/aboutFormSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/button_save" />

        <ImageButton
            android:id="@+id/aboutFormBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:src="@drawable/button_back" />

    </LinearLayout>

    <TextView
        android:id="@+id/aboutDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_about_description" />

    <EditText
        android:id="@+id/aboutDescriptionText"
        style="@style/PinkEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutDescriptionLabel"
        android:layout_below="@+id/aboutDescriptionLabel"
        android:ems="10"
        android:hint="@string/lbl_about_description"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/aboutCrazyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutDescriptionText"
        android:text="@string/lbl_about_crazy" />

    <EditText
        android:id="@+id/aboutCrazyText"
        style="@style/PinkEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutCrazyLabel"
        android:layout_below="@+id/aboutCrazyLabel"
        android:ems="10"
        android:hint="@string/lbl_about_crazy"
        android:inputType="textMultiLine" />

</RelativeLayout>