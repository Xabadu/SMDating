<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutCrazyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" >

        <Button
            android:id="@+id/aboutFormSaveBtn"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_blue_button"
            android:text="@string/btn_account_save" />

        <Button
            android:id="@+id/aboutFormBackBtn"
            style="@style/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.71"
            android:background="@drawable/gray_button"
            android:text="@string/btn_account_back" />

    </LinearLayout>

    <TextView
        android:id="@+id/aboutDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_about_description" />

    <EditText
        android:id="@+id/aboutDescriptionText"
        style="@style/PinkEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutDescriptionLabel"
        android:layout_below="@+id/aboutDescriptionLabel"
        android:ems="10"
        android:hint="@string/lbl_about_description"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/aboutCrazyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutDescriptionText"
        android:text="@string/lbl_about_crazy" />

    <EditText
        android:id="@+id/aboutCrazyText"
        style="@style/PinkEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutCrazyLabel"
        android:layout_below="@+id/aboutCrazyLabel"
        android:ems="10"
        android:hint="@string/lbl_about_crazy"
        android:inputType="textMultiLine" />

</RelativeLayout>