<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/gridItem"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:orientation="vertical"
   android:gravity="center_horizontal">
   
   <ImageView
       android:id="@+id/dashboardItemUserImage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

   </ImageView>

   <ImageView
       android:id="@+id/dashboardItemStatusImage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/dashboardItemUserImage" >
       
   </ImageView>

   <View
       android:id="@+id/dashboardItemOverlayView"
       android:layout_width="87dp"
       android:layout_height="20dp"
       android:layout_alignBottom="@+id/dashboardItemUserImage"
       android:layout_marginLeft="4dp"
       android:alpha="0.6"
       android:background="#2d2d2d"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/dashboardItemNameText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/dashboardItemUserImage"
       android:layout_marginLeft="4dp"
       android:gravity="center_horizontal"
       android:paddingLeft="2dp"
       android:paddingRight="2dp"
       android:textColor="#ffffff" >

   </TextView>
   
</RelativeLayout>