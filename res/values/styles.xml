<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="button_text" >
    	<item name="android:textColor" >#ffffff</item>
    	<item name="android:gravity" >center</item>
    	<item name="android:layout_margin" >3dp</item>
    	<item name="android:shadowColor">#000000</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius" >2</item>
  </style>
  
  <style name="PinkEditText" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/pink_edittext</item>
	  <item name="android:textColor">#000000</item>
  </style>
  
  <style name="PinkRadio" parent="android:Widget.CompoundButton.RadioButton">
      <item name="android:button">@drawable/pink_radio</item>
  </style>
  
  <style name="PinkSpinner" parent="android:Widget.Spinner">
      <item name="android:background">@drawable/pink_spinner</item>
      <item name="android:dropDownSelector">@drawable/list_selector</item>
  </style>

  <style name="PinkSpinner.DropDown">
      <item name="android:spinnerMode">dropdown</item>
  </style>

  <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
      <item name="android:checkMark">@drawable/pink_radio</item>
  </style>
  
  <style name="PinkSeekBar" parent="android:Widget.SeekBar">
      <item name="android:progressDrawable">@drawable/pink_scrubber_progress_horizontal</item>
      <item name="android:indeterminateDrawable">@drawable/pink_scrubber_progress_horizontal</item>
      <item name="android:minHeight">13dip</item>
      <item name="android:maxHeight">13dip</item>
      <item name="android:thumb">@drawable/pink_scrubber_control_selector</item>
      <item name="android:thumbOffset">16dip</item>
      <item name="android:paddingLeft">16dip</item>
      <item name="android:paddingRight">16dip</item>
  </style>
  
  <style name="accountRow" parent="@android:style/Widget.Button">
     <item name="android:background">@drawable/tablerow_selector</item>
  </style>
  
  <style name="PinkCheckbox" parent="android:Widget.CompoundButton.CheckBox">
      <item name="android:button">@drawable/pink_checkbox</item>
  </style>
  
</resources>