<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="false">
      <shape>
          <solid
              android:color="#cccccc" />
          <padding 
              android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp" />
          <corners
              android:radius="2dp" />
          <stroke 
              android:width="1dp"
              android:color="#bbbbbb" />
      </shape>
  </item>
  <item android:state_pressed="true" >
    <shape>
      <gradient
          android:startColor="#fb9e25"
          android:endColor="#ffc477"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ffc477"
          android:endColor="#fb9e25"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#fb9e25" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>